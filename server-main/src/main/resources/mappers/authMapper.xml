<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoytrips.model.dao.AuthDao">

    <resultMap id="userResultMap" type="user">
        <result column="user_id" property="id" />
        <result column="user_pw" property="pw"/>
        <result column="user_name" property="name"/>
        <result column="user_admin" property="admin"/>
        <result column="user_salt" property="salt"/>
        <result column="user_email" property="email"/>
        <result column="user_create_date" property="createDate"/>
    </resultMap>

    <!-- Token DTO에 대한 resultMap 정의 -->
    <resultMap id="tokenResultMap" type="token">
        <result column="access_token" property="accessToken"/>
        <result column="refresh_token" property="refreshToken"/>
        <result column="user_id" property="id"/>
    </resultMap>
    
    <!-- 토큰 재발급-->
    <select id="refreshTokens" parameterType="map" resultMap="tokenResultMap">
        SELECT
            access_token as accessToken,
            refresh_token as refreshToken,
            user_id as id
        FROM
            user
        WHERE
            user_id = #{id}

    </select>

    <!-- 회원 가입-->
    <!-- 회원 가입-->
    <insert id="regist" parameterType="user">
        INSERT INTO user (user_id, user_pw, user_name, user_admin, user_salt, user_email)
        VALUES (#{id}, #{pw}, #{name}, #{admin}, #{salt}, #{email})
    </insert>


    <!-- id 중복확인 -->
    <select id="isDuplicateId" parameterType="String" resultType="int">
        SELECT
            COUNT(*)
        FROM
            user
        WHERE
            user_id = #{id}
    </select>

    <!-- 로그인   -->
    <select id="login" parameterType="user">
        SELECT
            user_id id, user_pw pw, user_name name, user_admin admin, user_salt salt, user_email email
        FROM
            user
        WHERE
            user_id = #{id}
        ;
    </select>

    <!--  token 저장  -->
    <update id="saveTokens" parameterType="token">
        UPDATE user
        set access_token = #{accessToken}, refresh_token = #{refreshToken}
        where user_id = #{id}
    </update>

</mapper>