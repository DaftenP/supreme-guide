    <!-- 댓글 작성자 조회   -->
    <select id="selectCommentWriter" resultType="com.ssafy.enjoytrips.model.dto.Comment">
        SELECT qna_comment_id, qna_qna_id, user_user_id
        FROM qna_comment
        WHERE qna_comment_id = #{id}
    </select>


