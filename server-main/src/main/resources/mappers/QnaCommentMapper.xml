    <!-- 댓글 등록 -->
    <insert id="regist" parameterType="comment">
        INSERT INTO
            qna_comment(
                qna_comment_content,
                qna_comment_harmful,
                qna_qna_id,
                user_user_id)
        VALUES (
            #{content},
            #{harmful},
            #{articleId},
            #{userId}
        )
        ;
    </insert>

    <!--  댓글 수정  -->
    <update id="modify" parameterType="comment">
        UPDATE
            qna_comment
        SET
            qna_comment_content = #{content},
            qna_comment_harmful = #{harmful}
        WHERE
            qna_comment_id = #{id}
    </update>

    <!-- 댓글 삭제-->
    <delete id="delete" parameterType="int">
        DELETE FROM
                   qna_comment
        WHERE
            qna_comment_id = #{commentId}
    </delete>
